<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/shape_white_card">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_voice_image"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_voice_name"
        android:layout_below="@id/iv_voice_image"
        android:layout_marginTop="5dp"
        android:textColor="@color/Black"
        android:text="XXXXXXX"
        android:textSize="18dp"
        android:maxLines="1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_author"
        android:layout_below="@id/tv_voice_name"
        android:layout_marginTop="5dp"
        android:textColor="@color/Gray"
        android:text="XXXXXXX"
        android:textSize="12dp"
        android:maxLines="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_time_title"
        android:layout_below="@id/tv_author"
        android:layout_marginTop="5dp"
        android:textColor="@color/Gray"
        android:text="播放次数"
        android:textSize="12dp"
        android:maxLines="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_time"
        android:layout_below="@id/tv_author"
        android:layout_marginTop="5dp"
        android:textColor="@color/Gray"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_time_title"
        android:text="100000"
        android:textSize="12dp" />

</RelativeLayout>